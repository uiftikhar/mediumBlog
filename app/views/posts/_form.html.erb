<%= form_for post, html: { multipart: true, class: "editor-form", data: { page: 'main-editor' }, autocomplete: "off" } do |f| %>
  
  <div class="file-upload-previewer hidden">
    <img src="" id="image_preview"/>
  </div>
  
  <div class="form-group">
    <%= f.text_field :title, class: 'editor-title', placeholder: 'Title', autofocus: true, onfocus: "this.value = this.value;" %>
  </div>

  <div class="form-group">
    <%= f.text_area :body, class: 'medium-editable',placeholder: 'Tell your story'%> 
  </div>

  <div class="hidden">
    <%= f.text_field :all_tags %>
  </div>
 
    <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
      <i class="icon-ok icon-white"></i> Save
    <% end %>

  <%= f.submit %>
<% end %>