<div data-animation="fadeInUp-fadeOutDown" class="animated fadeInUp">
  <div class="col-xs-10 col-sm-10 col-md-6 col-md-offset-3 col-sm-offset-1 col-xs-offset-1">
    <% if @post.errors.any? %>
      <div class="error">
        <h2>
          <%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:
        </h2>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li> <%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="post-metadata">
    	
    	<div class="image-height">
      		<%= avatar_for(current_user, size: 40) %>
  		</div>
      <div class="post-info">
        <%= link_to current_user.username, current_user %><br/>
        <small>New Post</small>
      </div>
    </div>
    <%= render 'form', post: @post %>
  </div>
</div>
