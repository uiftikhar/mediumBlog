<h1>New Blog</h1>	

<%= form_for @post do |f| %>
	
	<% if @post.errors.any? %>
		<div class="error">
			<h2>
				<%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:
			</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li> <%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :body %>
	<%= f.text_area :body %>

	<%= f.label :all_tags %>
	<%= f.text_field :all_tags %>


	<%= f.submit "Publish" %>
<% end %>